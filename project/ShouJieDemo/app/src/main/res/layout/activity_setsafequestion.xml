<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color2">
        <!-- 设置邮箱标题 -->
        <LinearLayout
            android:id="@+id/myCenter_setting_setSafeQuestion_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/mycenter_setting_textview_border">
            <Button
                android:id="@+id/myCenter_setting_setSafeQuestion_return"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/left"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setSafeInfo"
                android:textSize="20sp"
                android:textColor="@color/color3"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:background="@color/color2">
            <RelativeLayout
                android:id="@+id/myCenter_setting_setSafeQuestion_relativeLayout1"
                android:layout_marginTop="60dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color1"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/myCenter_setting_setSafeQuestion_question1"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:textSize="20sp"
                    android:layout_marginStart="20dp"
                    android:gravity="center_vertical"
                    android:text="问题一：你最喜欢的音乐是什么？"
                    android:textColor="@color/color4"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/myCenter_setting_setSafeQuestion_question1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:textSize="20sp"
                        android:layout_marginStart="20dp"
                        android:text="答　案："
                        android:gravity="center_vertical"
                        android:textColor="@color/color4"/>
                    <EditText
                        android:id="@+id/myCenter_setting_setSafeQuestion_answer1"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:textColor="@color/color4"
                        android:maxLines="1"/>
                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color6"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color1"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/myCenter_setting_setSafeQuestion_question2"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:textSize="20sp"
                    android:layout_marginStart="20dp"
                    android:gravity="center_vertical"
                    android:text="问题二：你最喜欢的文章是什么？"
                    android:textColor="@color/color4"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/myCenter_setting_setSafeQuestion_question2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:textSize="20sp"
                        android:layout_marginStart="20dp"
                        android:text="答　案："
                        android:gravity="center_vertical"
                        android:textColor="@color/color4"/>
                    <EditText
                        android:id="@+id/myCenter_setting_setSafeQuestion_answer2"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:textColor="@color/color4"
                        android:maxLines="1"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color1"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/myCenter_setting_setSafeQuestion_question3"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:textSize="20sp"
                    android:layout_marginStart="20dp"
                    android:gravity="center_vertical"
                    android:text="问题三：你最喜欢的电影是什么？"
                    android:textColor="@color/color4"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/myCenter_setting_setSafeQuestion_question3"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:textSize="20sp"
                        android:layout_marginStart="20dp"
                        android:text="答　案："
                        android:gravity="center_vertical"
                        android:textColor="@color/color4"/>
                    <EditText
                        android:id="@+id/myCenter_setting_setSafeQuestion_answer3"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:textColor="@color/color4"
                        android:maxLines="1"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="40dp"
                android:gravity="center">

                <Button
                    android:id="@+id/myCenter_setting_setSafeQuestion_button"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:background="@drawable/email_button"
                    android:text="确认"
                    android:textColor="@color/colorAllWhite"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>