<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dayLightBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.example.shoujiedemo.util.StatusBarHeightView
        app:use_type="use_height"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <!-- 设置标题 -->
    <RelativeLayout
        android:id="@+id/myCenter_setting_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#fff">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">
            <Button
                android:id="@+id/myCenter_PersonalInfo_return"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@drawable/left"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/personalInfo"
                android:textSize="20sp"
                android:textColor="@color/dayLightTitle" />
        </LinearLayout>
        <View
            android:layout_alignParentBottom="true"
            android:background="#F5F5F5"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center">
            <Button
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="修改"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/userinfo_change_border"
                android:layout_marginEnd="20dp"/>
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/dayLightBackground">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="20dp"
            android:background="#fff"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="ID"
                android:textColor="@color/dayLightText"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/myCenter_PersonalInfo_ID"
                android:layout_width="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_centerVertical="true"
                android:text="1"
                android:textColor="@color/dayLightText"
                android:textSize="15sp"/>
        </RelativeLayout>
        <View
            android:layout_alignParentBottom="true"
            android:background="#F5F5F5"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:id="@+id/myCenter_setting_safe"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            android:background="#fff"
            android:focusable="true">
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:textColor="@color/dayLightText"
                android:text="昵称"
                tools:ignore="RelativeOverlap" />
            <TextView
                android:id="@+id/myCenter_PersonalInfo_userName"
                android:layout_width="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_centerVertical="true"
                android:text="梁朝伟"
                android:textColor="@color/dayLightText"
                android:textSize="15sp"/>
        </RelativeLayout>
        <View
            android:layout_alignParentBottom="true"
            android:background="#F5F5F5"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="#fff"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="20dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="性别"
                android:textColor="@color/dayLightText"
                android:textSize="15sp"
                tools:ignore="RelativeOverlap" />
            <TextView
                android:id="@+id/myCenter_PersonalInfo_userSex"
                android:layout_width="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_centerVertical="true"
                android:text="女"
                android:textColor="@color/dayLightText"
                android:textSize="15sp"/>
        </RelativeLayout>
        <View
            android:layout_alignParentBottom="true"
            android:background="#F5F5F5"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:id="@+id/myCenter_setting_clearCookie"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="#fff"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="20dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="年龄"
                android:textColor="@color/dayLightText"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/myCenter_PersonalInfo_userAge"
                android:layout_width="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_centerVertical="true"
                android:text="16"
                android:textColor="@color/dayLightText"
                android:textSize="15sp"/>
        </RelativeLayout>
        <View
            android:layout_alignParentBottom="true"
            android:background="#F5F5F5"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <!-- 关于 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:clickable="true"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="30dp"
            android:background="#fff"
            android:focusable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:text="个性签名"
                android:textColor="@color/dayLightText"
                tools:ignore="RelativeOverlap" />

        </RelativeLayout>
        <View
            android:layout_alignParentBottom="true"
            android:background="#F5F5F5"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/myCenter_PersonalInfo_userSign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="15sp"
            android:text="@string/userSign"
            android:textColor="@color/dayLightText" />

    </LinearLayout>
</LinearLayout>