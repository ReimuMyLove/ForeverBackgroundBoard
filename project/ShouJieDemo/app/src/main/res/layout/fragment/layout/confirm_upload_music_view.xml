<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/color6"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:elevation="2dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/share_music_title"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:elevation="4dp"
            android:textColor="@color/color15"
            android:text="复制分享链接"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <TextView
        android:layout_margin="20dp"
        android:id="@+id/title_bottom"
        android:layout_below="@id/share_music_title"
        android:text="在音乐app中点击“分享”->“复制链接”,然后全文粘贴到下方。(目前仅支持网易云音乐)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/upload_song_ed_link"
        android:hint="分享"
        android:background="@color/color1"
        android:padding="2dp"
        android:gravity="top"
        android:textSize="14sp"
        android:layout_margin="20dp"
        android:layout_below="@id/title_bottom"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:id="@+id/btn_bottom"
        android:background="@color/color1"
        android:layout_below="@id/upload_song_ed_link"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:text="取消"
            android:textColor="@color/color4"
            android:background="@color/color1"
            android:id="@+id/upload_song_item_btn_dismiss"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    <Button
        android:text="上传"
        android:background="@color/color1"
        android:textColor="@color/color4"
        android:id="@+id/upload_song_item_btn_commit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    </LinearLayout>


</RelativeLayout>