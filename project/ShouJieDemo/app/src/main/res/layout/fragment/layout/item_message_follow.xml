<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:paddingTop="10dp"
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--头像-->
    <com.example.shoujiedemo.util.CircleImageView
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/item_message_follow_user_head"
        android:src="@drawable/wangzuxian"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <!--名字-->
    <TextView
        android:text="王祖贤"
        android:id="@+id/item_message_follow_user_name"
        android:textColor="#000"
        android:textSize="16sp"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/item_message_follow_user_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="关注了你"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/item_message_follow_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <!--时间-->
    <TextView
        android:text="12-13-8:10"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:id="@+id/item_message_follow_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:background="#60D3D3D3"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>

</RelativeLayout>