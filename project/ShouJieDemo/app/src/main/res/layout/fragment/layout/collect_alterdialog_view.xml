<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/collect_circle"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout

        android:id="@+id/collect_title"
        android:background="@drawable/collect_circle"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:elevation="4dp"
            android:textColor="#000"
            android:text="选择文集"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/dismiss" />

    </RelativeLayout>
    <ListView
        android:id="@+id/set_list"
        android:layout_below="@id/collect_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:text="收藏"
        android:id="@+id/item_btn_collect"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_circle_shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>