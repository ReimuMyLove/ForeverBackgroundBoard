<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:paddingTop="10dp"
    android:background="@color/color1"
    android:layout_marginBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--头像-->
    <com.example.shoujiedemo.util.CircleImageView
        android:id="@+id/item_comment_message_user_head"
        android:src="@drawable/wangzuxian"
        android:layout_width="45dp"
        android:layout_height="45dp"/>
    <!--用户名-->
    <TextView
        android:text="王祖贤"
        android:layout_marginLeft="8dp"
        android:textSize="16sp"
        android:textColor="@color/color4"
        android:id="@+id/item_comment_message_user_name"
        android:layout_toRightOf="@id/item_comment_message_user_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="评论了你"
        android:layout_toRightOf="@id/item_comment_message_user_name"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <!--时间-->
    <TextView
        android:text="12-13 15:30"
        android:layout_marginLeft="8dp"
        android:id="@+id/item_comment_message_time"
        android:layout_toRightOf="@id/item_comment_message_user_head"
        android:layout_below="@id/item_comment_message_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <!--评论内容-->
    <TextView
        android:text="评论内容评论内容评论内容评论内容评论内容"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="25dp"
        android:id="@+id/item_comment_message_comment_text"
        android:layout_toRightOf="@id/content_left"
        android:layout_below="@id/item_comment_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:background="@color/color30"
        android:padding="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/item_comment_message_comment_content_text"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_below="@id/item_comment_message_comment_text"
        android:text="啊这啊这啊这啊这啊这啊这啊这啊这啊这啊这啊这啊这啊这啊这啊这啊这啊这啊这啊这啊这啊这啊这啊这啊这啊这啊这啊这啊这啊这啊这啊这啊这啊这啊这啊这啊这"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/content_left"
        android:background="@color/color4"
        android:layout_marginLeft="15dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/item_comment_message_user_head"
        android:layout_width="2dp"
        android:layout_height="40dp"/>

    <View
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/color6"
        android:layout_width="380dp"
        android:layout_height="0.8dp"/>

</RelativeLayout>