<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50DCDCDC"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fround.fragments.FroundFragment">
    <com.example.shoujiedemo.bean.StatusBarHeightView
        app:use_type="use_height"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.google.android.material.tabs.TabLayout
        android:background="@color/TabandBottomWhite"
        android:layout_gravity="center_horizontal"
        android:id="@+id/fround_topTab"
        app:tabIndicatorFullWidth="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="#BEBEBE"
        app:tabTextColor="#000000"
        app:tabRippleColor="@android:color/transparent"
        app:tabIndicatorHeight="2dp"
        app:tabPaddingStart="33dp"
        app:tabPaddingEnd="33dp"
        app:tabPaddingBottom="-20dp"
        app:tabMode="scrollable"
        >
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItem_hot"
            android:text="热门"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItem_article"
            android:text="文章"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItem_mind"
            android:text="感悟"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItem_poem"
            android:text="诗"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItem_music"
            android:text="音乐"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.google.android.material.tabs.TabLayout>
    <View
        android:elevation="2dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/fround_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- TODO: Update blank fragment layout -->
</LinearLayout>