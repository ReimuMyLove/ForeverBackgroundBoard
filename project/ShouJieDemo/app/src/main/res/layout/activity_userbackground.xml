<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/img_top"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/myCenter_userBackGround_img"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/bg04"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/myCenter_userBackGround_get"
        android:layout_width="match_parent"
        android:layout_below="@id/img_top"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/myCenter_userBackGround_take"
            android:layout_centerHorizontal="true"
            android:background="@drawable/collect_circle"
            android:layout_width="180dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="从相册选取"/>
        <Button
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/myCenter_userBackGround_photo"
            android:layout_below="@id/myCenter_userBackGround_take"
            android:background="@drawable/collect_circle"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="确认"/>
    </RelativeLayout>
</RelativeLayout>