<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:paddingTop="30dp"
    tools:context=".home.follow.activity.ArticleActivity">
    <ScrollView
        android:layout_marginBottom="40dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:context=".home.follow.activity.ArticleActivity">
            <TextView
                android:id="@+id/tv_title_details_article"
                android:textColor="@color/TitleTextBlack"
                android:textSize="30sp"
                android:text="绿毛水怪"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="32dp"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/title_right"
                android:textSize="16sp"
                android:text="收于"
                android:layout_toRightOf="@id/tv_title_details_article"
                android:layout_alignBottom="@id/tv_title_details_article"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="3.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_set_details_article"
                android:textSize="16sp"
                android:text="[文集]"
                android:textColor="#ADD8E6"
                android:layout_toRightOf="@id/title_right"
                android:layout_alignBottom="@id/tv_title_details_article"
                android:layout_marginBottom="3.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_userName_details_article"
                android:text="王祖贤"
                android:textColor="@color/articleLightBlack"
                android:layout_toRightOf="@id/iv_head_details_article"
                android:layout_alignTop="@id/iv_head_details_article"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_fanNumLeft_details_article"
                android:text="粉丝:"
                android:textColor="@color/articleLightBlack"
                android:layout_below="@id/tv_userName_details_article"
                android:layout_toRightOf="@id/iv_head_details_article"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_fanNum_details_article"
                android:text="--"
                android:textColor="@color/articleLightBlack"
                android:layout_below="@id/tv_userName_details_article"
                android:layout_toRightOf="@id/tv_fanNumLeft_details_article"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_date_details_article"
                android:textColor="@color/articleLightBlack"
                android:layout_toRightOf="@id/tv_userName_details_article"
                android:layout_alignBottom="@id/tv_userName_details_article"
                android:layout_marginLeft="8dp"
                android:textSize="12sp"
                android:text="--月--日"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.example.shoujiedemo.util.CircleImageView
                android:layout_below="@id/tv_title_details_article"
                android:id="@+id/iv_head_details_article"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/wangzuxian" />

            <ImageView
                android:id="@+id/follow_article_details_iv_follow_anim"
                android:visibility="invisible"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_alignTop="@id/tv_userName_details_article"
                android:background="@drawable/btn_circle_shape"
                android:src="@drawable/loading_anim"
                />

            <Button
                android:id="@+id/follow_article_details_btn_follow"
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:layout_alignTop="@id/tv_userName_details_article"
                android:background="@drawable/btn_circle_shape"
                android:text="已关注" />

            <ImageView
                android:id="@+id/iv_cover_article_details"
                android:layout_below="@id/tv_fanNum_details_article"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
               android:background="@drawable/cover"
                android:layout_width="380dp"
                android:layout_height="270dp"/>

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/tv_content_details_article"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/articleLightBlack"
                android:textSize="17sp"
                android:lineHeight="30dp"
                android:layout_below="@id/iv_cover_article_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </ScrollView>

    <View
        android:background="#BEBEBE"
        android:layout_above="@id/operation"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>

    <LinearLayout
        android:id="@+id/operation"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#fff"
        android:layout_alignParentBottom="true"
        android:paddingTop="8dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/follow_article_details_btn_share"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/share" />

            <TextView
                android:id="@+id/follow_article_details_tv_share_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="102" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:background="@drawable/collectionunselect"
                android:id="@+id/follow_article_details_btn_collection"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <TextView
                android:id="@+id/follow_article_details_tv_collection_num"
                android:text="102"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:background="@drawable/comment"
                android:id="@+id/follow_article_details_btn_comment"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <TextView
                android:id="@+id/follow_article_details_tv_comment_num"
                android:text="102"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:background="@drawable/likeunselect"
                android:id="@+id/follow_article_details_btn_like"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <TextView
                android:id="@+id/follow_article_details_tv_like_num"
                android:text="102"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>