<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff">
        <com.example.shoujiedemo.util.StatusBarHeightView
            app:use_type="use_height"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <!-- 销毁账户标题 -->
        <LinearLayout
            android:id="@+id/destroyAccount_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="#fff"
            android:gravity="center_vertical">
            <Button
                android:id="@+id/destroyAccount_return"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/left"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/destroyAccount"
                android:textSize="20sp"
                android:textColor="@color/colorTitle"
                android:gravity="center"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#DADADA"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:textSize="20dp"
            android:textColor="@color/colorTitle"
            android:text="开启确认注销按钮"/>
        <com.example.shoujiedemo.util.SwitchButton
            android:id="@+id/destroyAccount_switch"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="80dp"
            android:layout_height="40dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="#fff"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:textSize="20sp"
                android:textColor="@color/colorTitle"
                android:text="警告："/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/colorText"
                android:text="@string/destroyAccountWarning"/>
            <TextView
                android:id="@+id/destroyAccount_userID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/colorTitle"
                android:textSize="20sp"
                android:text="用户ID:"/>
            <TextView
                android:id="@+id/destroyAccount_userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="20sp"
                android:textColor="@color/colorTitle"
                android:text="用户名:"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <Button
            android:id="@+id/destroyAccount_enter"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="确认注销"
            android:clickable="false"
            android:background="@drawable/destroy_border"
            style="?android:attr/borderlessButtonStyle" />
    </LinearLayout>
</RelativeLayout>