<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_gravity="center">
    <com.example.shoujiedemo.bean.StatusBarHeightView
        app:use_type="use_height"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:gravity="center"
        android:text="添加文集"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"
        android:text="选择封面"
        android:textColor="#000"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">
        <ImageView
            android:id="@+id/mySpace_addGroup_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/addpic"
            android:background="@drawable/mycenter_userimgfunction_border"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="5dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:orientation="vertical"
        android:background="@drawable/login_form_border">
        <EditText
            android:id="@+id/mySpace_addGroup_groupName"
            android:layout_width="match_parent"
            android:background="@null"
            android:textSize="18sp"
            android:hint="文集名字"
            android:gravity="center"
            android:maxLength="16"
            android:inputType="text"
            android:maxLines="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <Button
            android:id="@+id/mySpace_addGroup_enter"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:text="确认"
            android:background="@drawable/login_form_border"
            style="?android:attr/borderlessButtonStyle" />
        <Button
            android:id="@+id/mySpace_addGroup_cancel"
            android:layout_marginStart="50dp"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:text="取消"
            android:background="@drawable/login_form_border"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>
</LinearLayout>