<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/myCenter_setting_Activity"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/dayLightBackground">
        <!-- 设置标题 -->
        <LinearLayout
            android:id="@+id/myCenter_setting_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/mycenter_setting_textview_border">
            <Button
                android:id="@+id/myCenter_setting_return"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/left"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textSize="20dp"
                android:textColor="@color/dayLightTitle"
                android:gravity="center"/>
        </LinearLayout>

        <!-- 夜间模式-->
        <LinearLayout
            android:id="@+id/myCenter_setting_nightMode"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:paddingLeft="10dp"
            android:background="@drawable/mycenter_setting_textview_border">

            <TextView
                android:layout_width="330dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="夜间模式"
                android:textColor="@color/dayLightText"
                android:textSize="15dp" />
            <com.example.shoujiedemo.util.SwitchButton
                android:id="@+id/myCenter_setting_nightModeSwitch"
                android:gravity="center_vertical"
                android:layout_width="50dp"
                android:layout_height="30dp"/>

        </LinearLayout>

        <!-- 安全设置 -->
        <LinearLayout
            android:id="@+id/myCenter_setting_safe"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:paddingLeft="10dp"
            android:background="@drawable/mycenter_setting_textview_border">
            <TextView
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:textColor="@color/dayLightText"
                android:text="账号与安全"
                />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/right"/>
        </LinearLayout>

        <!-- 清理缓存 -->
        <LinearLayout
            android:id="@+id/myCenter_setting_clearCookie"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:paddingLeft="10dp"
            android:background="@drawable/mycenter_setting_textview_border">
            <TextView
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:text="清理缓存"
                android:textColor="@color/dayLightText"
                />
            <TextView
                android:id="@+id/myCenter_setting_cookieSize"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:text="0.00"
                android:textColor="@color/dayLightText"
                />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/right"/>
        </LinearLayout>

        <!-- 帮助与反馈 -->
        <LinearLayout
            android:id="@+id/myCenter_setting_feedback"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:paddingLeft="10dp"
            android:background="@drawable/mycenter_setting_textview_border">
            <TextView
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:text="帮助与反馈"
                android:textColor="@color/dayLightText"
                />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/right"/>
        </LinearLayout>

        <!-- 关于 -->
        <LinearLayout
            android:id="@+id/myCenter_setting_about"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:paddingLeft="10dp"
            android:background="@drawable/mycenter_setting_textview_border">
            <TextView
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:text="关于"
                android:textColor="@color/dayLightText"
                />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/right"/>
        </LinearLayout>

        <!-- 退出登录 -->
        <Button
            android:id="@+id/myCenter_setting_logout"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:background="@drawable/mycenter_setting_button_border"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:textColor="@color/dayLightText"
            android:textSize="15dp"
            android:text="退出登录"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>