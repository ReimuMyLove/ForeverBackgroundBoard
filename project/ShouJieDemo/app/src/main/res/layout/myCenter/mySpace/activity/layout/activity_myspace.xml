<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:overScrollMode="never"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/mySpace_background"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/lexington"/>
        <!-- 头像框 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/mySpace_background"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:orientation="horizontal">
            <com.example.shoujiedemo.util.CircleImageView
                android:id="@+id/mySpace_userImg"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_alignBottom="@+id/mySpace_background"
                android:src="@drawable/userimg"/>
            <TextView
                android:id="@+id/mySpace_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="吴彦祖"
                android:textSize="25sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- 标题栏 -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/mySpace_topTab"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:tabIndicatorColor="#BEBEBE"
            app:tabIndicatorFullWidth="false"
            app:tabTextColor="@color/dayLightText">
            <com.google.android.material.tabs.TabItem
                android:id="@+id/mySpace_article"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.google.android.material.tabs.TabItem
                android:id="@+id/mySpace_idea"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.google.android.material.tabs.TabItem
                android:id="@+id/mySpace_poem"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </com.google.android.material.tabs.TabLayout>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/mySpace_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.viewpager2.widget.ViewPager2>
    </LinearLayout>
</LinearLayout>