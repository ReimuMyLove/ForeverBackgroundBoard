<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dayLightBackground"
        android:orientation="vertical">
        <!-- 安全设置标题 -->
        <LinearLayout
            android:id="@+id/myCenter_setting_safe_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/mycenter_setting_textview_border">
            <Button
                android:id="@+id/myCenter_setting_safe_return"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/left"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号与安全"
                android:textSize="20dp"
                android:textColor="@color/dayLightTitle"
                android:gravity="center"/>
        </LinearLayout>

        <!-- 修改密码 -->
        <LinearLayout
            android:id="@+id/myCenter_setting_safe_changePassword"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="50dp"
            android:gravity="center_vertical"
            android:background="@drawable/mycenter_setting_textview_border"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="修改密码"
                android:textColor="@color/dayLightText"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/right" />
        </LinearLayout>

        <!-- 修改安全问题 -->
        <LinearLayout
            android:id="@+id/myCenter_setting_safe_setSafeQuestion"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:background="@drawable/mycenter_setting_textview_border"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="设置安全问题"
                android:textColor="@color/dayLightText"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:src="@drawable/right" />
        </LinearLayout>

        <!-- 设置邮箱 -->
        <LinearLayout
            android:id="@+id/myCenter_setting_safe_setEmail"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center_vertical"
            android:background="@drawable/mycenter_setting_textview_border"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="绑定邮箱"
                android:textColor="@color/dayLightText"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:src="@drawable/right" />
        </LinearLayout>

        <!-- 注销账号 -->
        <LinearLayout
            android:id="@+id/myCenter_setting_safe_destroyAccount"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:background="@drawable/mycenter_setting_textview_border"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="注销账号*"
                android:textColor="@color/dayLightText"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:src="@drawable/right" />
        </LinearLayout>

        <!-- 警告内容 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="25dp"
            android:textSize="15dp"
            android:text="@string/destroyAccountWarning"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>