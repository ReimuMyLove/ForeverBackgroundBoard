<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="@color/centerBackGround"
    android:overScrollMode="never">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/myCenter_userBackGround"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:background="@drawable/bg05" />
                <com.example.shoujiedemo.util.TrancircleImageView
                    android:id="@+id/myCenter_userImg_background"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    />
                <Button
                    android:id="@+id/myCenter_setting_intent"
                    android:stateListAnimator="@null"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/setting"
                    tools:targetApi="lollipop" />
                <LinearLayout
                    android:id="@+id/myCenter_userImg_top"
                    android:layout_width="match_parent"
                    android:paddingTop="170dp"
                    android:layout_height="wrap_content"
                    android:gravity="end">
                    <com.example.shoujiedemo.util.CircleImageView
                        android:id="@+id/myCenter_userImg"
                        android:gravity="end"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/bg02" />
                </LinearLayout>

                <LinearLayout
                    android:layout_below="@id/myCenter_userImg_top"
                    android:id="@+id/myCenter_card_top"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-20dp"
                    android:paddingBottom="50dp"
                    >
                    <androidx.cardview.widget.CardView
                        android:id="@+id/myCenter_card"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="20dp"
                        android:elevation="15dp"
                        app:cardCornerRadius="10dp"
                        tools:targetApi="lollipop">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:id="@+id/top_card"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="#80add8e6">
                            </LinearLayout>
                        <RelativeLayout
                            android:id="@+id/myCenter_mySpace"
                            android:layout_below="@id/top_card"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_height="60dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:layout_marginTop="10dp">
                            <ImageView
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:id="@+id/iv_space_center"
                                android:src="@drawable/space_center"
                                android:layout_width="20dp"
                                android:layout_height="20dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_toEndOf="@id/iv_space_center"
                                android:layout_centerVertical="true"
                                android:text="我的空间"
                                android:textColor="@color/dayLightText"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/right"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/myCenter_userInfo"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_below="@id/myCenter_mySpace"
                            android:layout_marginRight="20dp"
                            android:layout_height="60dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:layout_marginTop="60dp">

                            <ImageView
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:id="@+id/iv_owner_center"
                                android:src="@drawable/owner_center"
                                android:layout_width="20dp"
                                android:layout_height="20dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_toEndOf="@id/iv_owner_center"
                                android:text="个人中心"
                                android:layout_marginStart="5dp"
                                android:textColor="@color/dayLightText"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="210dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/right"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:orientation="horizontal"
                            android:id="@+id/myCenter_Storing"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="20dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:layout_marginRight="20dp"
                            android:layout_height="60dp"
                            android:layout_below="@id/myCenter_mySpace"
                            >

                            <ImageView
                                android:id="@+id/iv_collect_center"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:src="@drawable/collect_center"
                                android:layout_width="20dp"
                                android:layout_height="20dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="5dp"
                                android:layout_toEndOf="@id/iv_collect_center"
                                android:text="收藏"
                                android:textColor="@color/dayLightText"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/right"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/myCenter_helpCenter"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:layout_marginTop="60dp"
                            android:layout_height="60dp"
                            android:layout_below="@id/myCenter_Storing">

                            <ImageView
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:id="@+id/iv_help_center"
                                android:src="@drawable/help_center"
                                android:layout_width="20dp"
                                android:layout_height="20dp"/>

                            <TextView
                                android:layout_marginStart="5dp"
                                android:layout_toEndOf="@id/iv_help_center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="帮助中心"
                                android:textColor="@color/dayLightText"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/right"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/myCenter_myFollow"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_height="60dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:layout_below="@id/myCenter_helpCenter">

                            <ImageView
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:id="@+id/iv_follow_center"
                                android:src="@drawable/help_center"
                                android:layout_width="20dp"
                                android:layout_height="20dp"/>

                            <TextView
                                android:layout_marginStart="5dp"
                                android:layout_toEndOf="@id/iv_follow_center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="我的关注"
                                android:textColor="@color/dayLightText"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/right"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/myCenter_myAgreement"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_height="60dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:layout_below="@id/myCenter_myFollow">

                            <ImageView
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:id="@+id/iv_like_center"
                                android:src="@drawable/center_like"
                                android:layout_width="20dp"
                                android:layout_height="20dp"/>

                            <TextView
                                android:layout_marginStart="5dp"
                                android:layout_toEndOf="@id/iv_like_center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="我的点赞"
                                android:textColor="@color/dayLightText"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/right"/>
                        </RelativeLayout>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/myCenter_userInformation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/myCenter_userName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:text="用户名"
                        android:textColor="@android:color/white"/>
                    <TextView
                        android:id="@+id/myCenter_userFans"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:text="粉丝数:2020"/>
                </LinearLayout>
            </RelativeLayout>
</ScrollView>