<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="@color/dayLightBackground"
    android:overScrollMode="never">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp">
                <ImageView

                    android:id="@+id/myCenter_userBackGround"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:background="@drawable/bg05" />

                <com.example.shoujiedemo.util.TrancircleImageView
                    android:id="@+id/myCenter_userImg_background"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    />
                <Button
                    android:id="@+id/myCenter_setting_intent"
                    android:stateListAnimator="@null"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/setting"/>
                <LinearLayout
                    android:id="@+id/myCenter_userImg_top"
                    android:layout_width="match_parent"
                    android:paddingTop="170dp"
                    android:layout_height="350dp"
                    android:gravity="end">
                    <com.example.shoujiedemo.util.CircleImageView
                        android:id="@+id/myCenter_userImg"
                        android:gravity="end"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/bg06" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/myCenter_card_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:paddingTop="260dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="80dp"
                    android:gravity="center">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/myCenter_card"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dip">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="#add8e6">
                        </LinearLayout>
                        <RelativeLayout
                            android:id="@+id/myCenter_mySpace"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="40dp"
                            android:gravity="right"
                            android:background="@drawable/mycenter_card"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_weight="1"
                                android:text="我的空间"
                                android:textColor="@color/dayLightText"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/right"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/myCenter_userInfo"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="90dp"
                            android:background="@drawable/mycenter_card">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:text="个人中心"
                                android:textColor="@color/dayLightText"
                                android:textSize="16sp"
                                android:layout_weight= "1"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="210dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/right"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:orientation="horizontal"
                            android:id="@+id/myCenter_Storing"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="140dp"
                            android:background="@drawable/mycenter_card">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:text="收藏"
                                android:textColor="@color/dayLightText"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/right"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/myCenter_helpCenter"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="190dp"
                            android:background="@drawable/mycenter_card">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:text="帮助中心"
                                android:textColor="@color/dayLightText"
                                android:textSize="16sp"
                                android:layout_weight= "1"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/right"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/myCenter_myFollow"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="240dp"
                            android:background="@drawable/mycenter_card">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:text="我的关注"
                                android:textColor="@color/dayLightText"
                                android:textSize="16sp"
                                android:layout_weight= "1"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/right"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/myCenter_myAgreement"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="290dp"
                            android:background="@drawable/mycenter_card">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:text="我的点赞"
                                android:textColor="@color/dayLightText"
                                android:textSize="16sp"
                                android:layout_weight= "1"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/right"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/myCenter_userInformation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/myCenter_userName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:text="用户名"
                        android:textColor="@android:color/white"/>
                    <TextView
                        android:id="@+id/myCenter_userFans"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:text="粉丝数:2020"/>
                </LinearLayout>
            </RelativeLayout>
</ScrollView>