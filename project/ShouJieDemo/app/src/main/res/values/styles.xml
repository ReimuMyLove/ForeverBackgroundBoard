<resources>

    <!-- Base application theme. -->
    <style name="TranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--底部导航字体样式-->
    <style name="myBottomNavigationStyle" >
        <item name="android:textSize">13sp</item>
    </style>

    <!--顶部导航字体样式-->
    <style name="myTabLayoutTextStyle" >
        <item name="android:textSize">16sp</item>
    </style>

    <style name="app_start"  parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>//取消Actionbar
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>//设置全屏
        <item name="android:windowBackground">@drawable/start</item>//设置背景
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/darkTabandBottomWhite</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/darkarTicleLightBlack</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@color/darkArticleLightBlack</item>

    </style>

</resources>
